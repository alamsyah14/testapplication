<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whiteTransparent</item>
        <item name="colorPrimaryDark">@color/darkGray2</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Button Style-->
    <style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ButtonGoogle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_google_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ButtonFacebook" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_facebook_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_transparent_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonPrimary.Half">
        <item name="android:width">160dp</item>
    </style>

    <!--Base Text style-->
    <style name="BaseAppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="BaseAppTheme.Text.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BaseAppTheme.Text.Bold.Italic">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="BaseAppTheme.Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BaseAppTheme.Text.Regular.Italic">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>


    <!--Text style-->
    <style name="HeadlineText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
    </style>

    <style name="SubHeadlineText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="BodyText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MicroText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="MiniText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <!--Headline Text Bold-->
    <style name="HeadlineText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="HeadlineText.Bold.Black">
        <item name="android:textColor">@color/black</item>
